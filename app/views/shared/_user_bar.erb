<% unless current_user %>

  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <%if @ingredients_link %>
      <form action='/inventory' method='get' name='inventory'>
        <button class='btn btn-primary' type='submit'><%= @ingredients_link %></button>
      </form>
    <% end %>
    <form action="/users/login" class="navbar-form navbar-left" id="signin" method="post" name="signin" role="form">

      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
        <input class="form-control" id="email" name="user[username]" placeholder="Username" type="text" value="">
      </div>

      <div class="input-group">
        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
        <input class="form-control" id="password" name="user[password]" placeholder="Password" type="password" value="">
      </div>
      <button class="btn btn-primary" type="submit">Login</button>
    </form>

    <ul class="nav navbar-form navbar-right">
      <a class="btn btn-default" href="/users/signup">or..Sign up</a>
    </ul>
  </div>
<% else %>
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li class="dropdown">
        <a href="#" class="navbar-brand dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.username %> <span class="caret"></span></a>
        <ul class="dropdown-menu">
          <li><a href="#">History</a></li>
          <li><a href="#">Recipes</a></li>
          <li><a href="#">Something else</a></li>
        </ul>
      </li>
  </ul>
    <form action="/users/logout" class="navbar-form navbar-right" id="signin" method="post" role="form">
      <button class="btn btn-danger" type="submit">Logout</button>
    </form>
  </div>
<% end %>
