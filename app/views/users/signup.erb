<form action="/users/signup" method="POST" class="form-horizontal">
  <div class="form-group">
    <label for="username">Username</label>
    <input name="user[username]" type="text" class="form-control" id="exampleInputEmail1" placeholder="Name">
  </div>
  <div class="form-group">
    <label for="exampleInputPassword1">Password</label>
    <input name="user[password]" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
