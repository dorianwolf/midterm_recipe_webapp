<form action="/users/signup" method="POST" class="form-horizontal">
  <div class="form-group">
    <h3><label for="username">Username</label></h3>
    <input name="user[username]" type="text" class="form-control input-lg" placeholder="Name" autofocus="true">
  </div>
  <div class="form-group">
    <h3><label for="exampleInputPassword1">Password</label></h3>
    <input name="user[password]" type="password" class="form-control input-lg" placeholder="Password">
  </div>
  <button type="submit" class="btn btn-success">Sign Up</button>
</form>
